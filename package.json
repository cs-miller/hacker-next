{
  "name": "hacker-next",
  "version": "1.0.0",
  "description": "yet another hacker news client",
  "author": "Christopher Miller",
  "license": "MIT",
  "scripts": {
    "dev": "next dev",
    "build:nexus-typegen": "ts-node --compiler-options '{\"module\":\"CommonJS\"}' --transpile-only src/schema",
    "build": "npm run build:nexus-typegen && next build",
    "start": "next start",
    "lint": "next lint",
    "prepare": "husky install"
  },
  "dependencies": {
    "apollo-server-core": "^3.4.0",
    "apollo-server-micro": "^3.3.0",
    "graphql": "^15.6.0",
    "graphql-relay": "^0.9.0",
    "micro": "^9.3.4",
    "next": "^11.1.2",
    "nexus": "^1.1.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@types/react": "^17.0.26",
    "eslint": "7.32.0",
    "eslint-config-next": "11.1.2",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "prettier": "^2.4.1",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cs-miller/hacker-next.git"
  },
  "bugs": {
    "url": "https://github.com/cs-miller/hacker-next/issues"
  },
  "homepage": "https://github.com/cs-miller/hacker-next#readme",
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint --cache --fix",
    "*.{js,ts,tsx,css,md}": "prettier --write"
  }
}
