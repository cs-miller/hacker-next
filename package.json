{
  "name": "hacker-next",
  "version": "1.0.0",
  "description": "yet another hacker news client",
  "author": "Christopher Miller",
  "license": "MIT",
  "scripts": {
    "dev": "next dev",
    "build:nexus-typegen": "ts-node --compiler-options '{\"module\":\"CommonJS\"}' --transpile-only src/schema",
    "build": "npm run build:nexus-typegen && next build",
    "start": "next start",
    "lint": "next lint",
    "prepare": "husky install",
    "relay": "relay-compiler",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "dependencies": {
    "apollo-server-core": "^3.4.0",
    "apollo-server-micro": "^3.3.0",
    "graphql": "^15.6.0",
    "graphql-relay": "^0.9.0",
    "micro": "^9.3.4",
    "next": "^11.1.2",
    "nexus": "^1.1.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-relay": "^12.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@storybook/addon-actions": "^6.3.10",
    "@storybook/addon-essentials": "^6.3.10",
    "@storybook/addon-links": "^6.3.10",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/react": "^6.3.10",
    "@types/react": "^17.0.26",
    "@types/react-relay": "^11.0.2",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "autoprefixer": "^10.3.7",
    "babel-loader": "^8.2.2",
    "babel-plugin-relay": "^12.0.0",
    "eslint": "7.32.0",
    "eslint-config-next": "11.1.2",
    "eslint-plugin-relay": "^1.8.2",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "postcss": "^8.3.9",
    "prettier": "^2.4.1",
    "relay-compiler": "^12.0.0",
    "relay-compiler-language-typescript": "^14.2.1",
    "relay-config": "^12.0.0",
    "tailwindcss": "^2.2.16",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cs-miller/hacker-next.git"
  },
  "bugs": {
    "url": "https://github.com/cs-miller/hacker-next/issues"
  },
  "homepage": "https://github.com/cs-miller/hacker-next#readme",
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint --cache --fix",
    "*.{js,ts,tsx,css,md}": "prettier --write"
  }
}
